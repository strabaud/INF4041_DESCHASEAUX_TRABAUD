= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :author
    %br
      = f.text_field :author
  .field
    = f.label :description
    %br
      = f.text_area :description
  .field
    = f.label :note
    %br
      = f.number_field :note
  .field
    = f.label :cover
    %br
      = f.text_field :cover
  .field
    = f.label :nbreader
    %br
      = f.number_field :nbreader
  .actions
    = f.submit