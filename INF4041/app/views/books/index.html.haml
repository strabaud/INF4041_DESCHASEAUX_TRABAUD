%head
  %link{:href => "/stylesheets/materialize.min.css", :media => "screen,projection", :rel => "stylesheet", :type => "text/css"}/

%body
  %script{:src => "https://code.jquery.com/jquery-2.1.1.min.js", :type => "text/javascript"}
  %script{:src => "/javascripts/materialize.min.js", :type => "text/javascript"}
  %h1.nav-wrapper.red.lighten-3 Listing books
  %table
    %thead
      %tr
        %th Name
        %th Author
        %th Description
        %th Note
        %th Cover
        %th Nbreader
        %th{:colspan => "3"}
    %tbody
      - @books.each do |book|
        %tr
          %td= book.name
          %td= book.author
          %td= book.description
          %td= book.note
          %td= book.cover
          %td= book.nbreader
          %td.waves-effect.waves-light.btn= link_to 'Show', book
          %td.waves-effect.waves-light.btn= link_to 'Edit', edit_book_path(book)
          %td.waves-effect.waves-light.btn= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
  %br
    = link_to 'New Book', new_book_path