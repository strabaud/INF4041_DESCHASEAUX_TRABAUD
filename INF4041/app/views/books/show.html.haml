%p#notice= notice
%p
  %strong Name:
  = @book.name
%p
  %strong Author:
  = @book.author
%p
  %strong Description:
  = @book.description
%p
  %strong Note:
  = @book.note
%p
  %strong Cover:
  = @book.cover
%p
  %strong Nbreader:
  = @book.nbreader
%p
  %strong Notes:
  -@book.book_readers.each do |book_reader|
    = "#{book_reader} a mis #{book_reader.notes.where(book: @book).first.value}"
  \.notes.map{|note| note.value}.to_s

= link_to 'Edit', edit_book_path(@book)
